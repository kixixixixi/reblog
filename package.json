{
  "name": "reblog",
  "version": "0.0.3",
  "description": "Generate blog json for static frontend from markdown",
  "homepage": "https://github.com/kixixixixi/reblog",
  "main": "index.js",
  "scripts": {
    "exec": "ts-node --files -r tsconfig-paths/register src/reblog.ts",
    "build": "tsc",
    "test": "npm run lint && npm run jest",
    "jest": "jest",
    "lint": "eslint --ext .ts --ignore-path .gitignore src",
    "lint:fix": "eslint --ext .ts --ignore-path .gitignore --fix src"
  },
  "bin": {
    "reblog": "reblog.js"
  },
  "pre-commit": [
    "test",
    "build"
  ],
  "jest": {
    "preset": "ts-jest"
  },
  "author": "kixixixixi",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.10",
    "@types/node": "^14.6.0",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.4.0",
    "prettier": "^2.0.5",
    "ts-jest": "^26.2.0",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "commander": "^6.0.0",
    "dayjs": "^1.8.33",
    "mkdirp": "^1.0.4",
    "parse-md": "^2.0.4",
    "pre-commit": "^1.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kixixixixi/reblog.git"
  },
  "keywords": [
    "blog",
    "json",
    "spa"
  ]
}
