{
  "compilerOptions": {
    "target": "esnext",
    "module": "umd",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types" : ["node"],
    "baseUrl": "./",
    "typeRoots": ["src/types"],
    "outDir": "./",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
